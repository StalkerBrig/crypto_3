#!/bin/bash

javac lock.java
javac rsa_sign.java
while getopts :d:p:r:vk: option
	do
		case "$option" in
		d)
			directory="$OPTARG"
			;;
		p)
			pubkey="$OPTARG"
			;;
		r)	privkey="$OPTARG"
			;;
		vk)	vpk="$OPTARG"
			;;
			esac
	done

#Lock creates an AES key, encrypts it with pubkey, and writes to symmetric key manifest
java lock $pubkey
java rsa_sign \-k $privkey -m manifest \-s manifest.sig 
